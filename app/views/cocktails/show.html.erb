<h2><%= @cocktail.name %></h2>
<hr>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name + ' - ' + dose.description + ' | ' %>
    <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "text-danger" %>
  </li>
  <% end %>
</ul>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient, as: :select %>
  <%= f.input :description %>
  <%= f.button :submit, class: "btn btn-primary w-100" %>
<% end %>
